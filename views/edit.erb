<div class="container">
    <form action="/tasks/<%= @task.id %>" method="post">
        <div class="controls">
            <div class="form-group">
                <input type="text" name="title" placeholder="タイトル" value="<%= CGI.escapeHTML(@task.title) %>" class="form-control input-lg"><br>
                <input type="text" name="due_date" placeholder="締切" value="<%= @task.due_date %>" class="form-control input-lg"><br>
            </div>
            リスト:
            <select name="list" class="form-control">
                <% List.all.each do |list| %>
                    <option value="<%= list.id %>" 
                        <% if list.id == @task.list.id %>
                            selected
                        <% end %>>
                        <%= list.name %>
                    </option>
                <% end %>
            </select>
            <div class="form-group">
                <input class="form-control col-lg-4" type="submit" value="登録">
            </div>
        </div>
    </form>    
</div>